<% obj.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="center chef-pic">
        <%= link_to gravatar_for(recipe.chef, size: 120), chef_path(recipe.chef) %>
      </section>
    </div>

    <div class="col-md-8 card card-body bg-light">
      <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description, length: 150) %></p>
      <p><small>Created <%= time_ago_in_words(recipe.created_at) %> ago</small></p>
      <% if logged_in? && current_chef == recipe.chef %>
        <p>
          <small>
            <%= link_to 'Edit this recipe', edit_recipe_path(recipe) %>
          </small>
        </p>
        <p>
          <small>
            <%= link_to 'Delete this recipe', recipe_path(recipe), method: :delete,
                                              data: {confirm: 'Are you sure ?'}
            %>
          </small>
        </p>
      <% end %>
    </div>
  </div>
<% end %>