<%= render 'shared/page_title', title: 'Sign Up'%>
<%= render 'shared/errors', obj: @chef%>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@chef, :html => {role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :chefname, 'Name' %>      
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Your name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>      
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Your email", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>      
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password_confirmation, 'Confirm password' %>      
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Confirm your password", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
        <%= f.submit 'Create my account', class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      <%= link_to 'Cancel request and return to recipes listing', recipes_path %>
    </div>
  </div>
</div>